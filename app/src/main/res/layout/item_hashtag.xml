<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_marginVertical="@dimen/_5sdp"
    android:maxWidth="@dimen/_120sdp"
    android:layout_marginHorizontal="@dimen/_6sdp" >



    <androidx.cardview.widget.CardView
        android:id="@+id/imageViewParent"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:maxWidth="@dimen/_120sdp"
        android:maxHeight="@dimen/_120sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:layout_constraintVertical_bias="00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/hashTagImage"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/profileImageParent"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_50sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewParent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background" />
    </androidx.cardview.widget.CardView>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profileName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/dummy_name"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/medium"
        android:ellipsize="end"
        android:maxWidth="@dimen/_150sdp"
        android:paddingHorizontal="@dimen/_6sdp"
        app:layout_constraintTop_toTopOf="@+id/profileImageParent"
        app:layout_constraintBottom_toBottomOf="@id/profileImageParent"
        app:layout_constraintStart_toEndOf="@id/profileImageParent"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/orderDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/dummy_name"
        android:textSize="@dimen/_9ssp"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingVertical="@dimen/_2sdp"
        android:fontFamily="@font/medium"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImageParent"
      />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/orderPostDay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/dummy_days"
        android:textSize="@dimen/_7ssp"
        android:alpha="0.5"
        android:ellipsize="end"
        android:fontFamily="@font/bold"
        android:paddingVertical="@dimen/_4sdp"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderDescription"
        />


</androidx.constraintlayout.widget.ConstraintLayout>